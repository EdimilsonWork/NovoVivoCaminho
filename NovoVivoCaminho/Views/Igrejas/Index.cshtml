@model IEnumerable<NovoVivoCaminho.Models.Igrejas>

@{
    ViewBag.Title = "Igrejas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Igrejas</h2>

<p type="button" class="btn btn-xs">
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table table-hover table-striped table-bordered text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Equipe)
        </th>
        <th class="text-center">
            Opções
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Equipe)
        </td>
        <td>
            @Html.ActionLink("Detalhe", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-xs", type = "button" })
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-xs", type = "button" })
            @Html.ActionLink("Excluir", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-xs", type = "button" })
        </td>
    </tr>
}

</table>
